<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnSalvar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.FormNovoActivity">

    <EditText
        android:id="@+id/formEditPlaca"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Informe a placa do veículo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/formEditModelo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Informe o modelo do veículo"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/formEditPlaca"
        app:layout_constraintStart_toStartOf="@+id/formEditPlaca"
        app:layout_constraintTop_toBottomOf="@+id/formEditPlaca" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="@+id/formEditModelo"
        app:layout_constraintStart_toStartOf="@+id/formEditModelo"
        app:layout_constraintTop_toBottomOf="@+id/formEditModelo" />
</androidx.constraintlayout.widget.ConstraintLayout>